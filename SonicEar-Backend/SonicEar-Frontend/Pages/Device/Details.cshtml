@page
@model SonicEar_Frontend.Pages.Device.DetailsModel
@{
}
<div id="app">
    <h3>ID: {{item.id}}</h3>
    <h4>Location: {{item.location}}</h4>

    <div>
        <div class="row">
            <div v-if="measurements">
                <br />
                <h3 class="table-header">
                    Målinger
                </h3>
                <table class="full-table shdw">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tidspunkt</th>
                            <th>Måling</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="item in measurements">
                            <td>
                                {{item.id}}
                            </td>
                            <td>
                                {{item.timeStamp}}
                            </td>
                            <td>
                                {{item.noiseLevel}}
                            </td>
                            <td>
                                todo
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<script src="~/js/deviceInfo.js"></script>
