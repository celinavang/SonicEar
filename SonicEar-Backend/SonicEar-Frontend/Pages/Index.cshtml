@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

<div id="app">
    <div class="row">
        <h3>
            Dashboard
        </h3>
    </div>
    <div class="row">
        <div>
            <h4 style="color:#897b7b;">Enheder</h4>
        </div>
        <div>
            <div style="display: inline-block; margin-inline-end: 25px;" v-for="item in items">
                <div style="width:80px!important; ">
                    <img v-bind:style="'width:100%; filter: hue-rotate(' + item.id*item.id*10/item.id + 'deg);'" src="/images/ear.png" />
                </div>
                <p style="text-align:center; font-size:12px; font-weight: 500; margin-top:10px; color:#897b7b;">{{item.location}}</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div>
            <h4>Seneste målinger</h4>
        </div>
    </div>
</div>

<script src="~/js/devices.js"></script>