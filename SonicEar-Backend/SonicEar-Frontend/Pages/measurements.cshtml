@page
@model SonicEar_Frontend.Pages.measurementsModel
@{
}

<div id="app">
    {{errormessage}}
    <div class="">
        <div class="row">
            <div>
                <h3 class="table-header">
                    Målinger
                </h3>
                <div class="search-button">
                    <div>
                        <input v-model="SearchQuery" type="text" placeholder="Søgefelt - first try D:" />
                        <button v-on:click="search">Search</button>
                    </div>
                </div>
                <table class="full-table shdw">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Enhedens placering</th>
                            <th>Tidspunkt</th>
                            <th>Måling</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="item in items">
                            <td>
                                {{item.id}}
                            </td>
                            <td>
                                {{item.device.location}}
                            </td>
                            <td>
                                {{item.timeStamp}}
                            </td>
                            <td>
                                {{item.noiseLevel}}
                            </td>
                            <td>
                                todo
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<script src="~/js/measurements.js"></script>